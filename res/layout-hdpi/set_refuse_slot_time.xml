<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:focusable="true" android:focusableInTouchMode="true">
 <LinearLayout android:layout_width="fill_parent" android:weightSum="1" android:layout_height="50dip" android:background="@drawable/bar" android:baselineAligned="false" android:id="@+id/barLinearLayout">
        <Button android:layout_width="85dip" android:layout_height="40dip" android:layout_margin="3dip" android:text="上一步" android:layout_gravity="center_vertical" android:layout_weight="0.06" android:background="@drawable/button_short_background" android:id="@+id/back_button" android:textStyle="bold"></Button>
        <TextView android:text="设置时间" android:textSize="25dip" android:layout_width="wrap_content" android:layout_height="fill_parent" android:textAppearance="?android:attr/textAppearanceMedium" android:textStyle="bold" android:id="@+id/neverCallTextView" android:gravity="center" android:layout_weight="0.85"></TextView>
        <Button android:layout_margin="3dip" android:layout_weight="0.06" android:layout_height="40dip" android:layout_width="85dip" android:text="保存" android:background="@drawable/button_short_background" android:layout_gravity="center_vertical" android:id="@+id/store_button" android:textStyle="bold"></Button>
    </LinearLayout>
        <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="match_parent" android:baselineAligned="false" android:weightSum="1" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginTop="8dip" android:layout_marginBottom="-10dip">
            <Button android:text="起始时间" android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:layout_marginLeft="35dip" android:clickable="false" android:textStyle="bold"></Button>
            <EditText android:text = "00:00" android:inputType="time" android:layout_height="wrap_content" android:id="@+id/startTime_editView" android:layout_marginLeft="15dip" android:layout_marginTop="15dip" android:layout_marginBottom="15dip" android:layout_width="106dp" android:layout_weight="0.18" android:textStyle="bold" android:gravity="center" android:textSize="20dip" android:editable="false" android:clickable="false"></EditText>
        </LinearLayout>
        
        <LinearLayout android:id="@+id/linearLayout2" android:layout_width="match_parent" android:baselineAligned="false" android:weightSum="1" android:layout_height="wrap_content" android:layout_marginLeft="10dip" android:layout_marginRight="10dip">
            <Button android:text="终止时间" android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:layout_marginLeft="35dip" android:clickable="false" android:textStyle="bold"></Button>
            <EditText android:text = "00:00"  android:inputType="time" android:layout_height="wrap_content" android:id="@+id/endTime_editView" android:clickable="false" android:layout_marginLeft="15dip" android:layout_marginTop="15dip" android:layout_marginBottom="15dip" android:layout_width="106dp" android:layout_weight="0.18" android:textStyle="bold" android:gravity="center" android:textSize="20dip" android:editable="false"></EditText>
        </LinearLayout>
        <LinearLayout android:weightSum="1" android:paddingLeft="12dp" android:paddingTop="10dp" android:layout_height="wrap_content" android:paddingRight="12dp" android:layout_gravity="center_horizontal" android:layout_width="276dp">
            <edu.crabium.android.wheel.WheelView android:layout_weight="0.46" android:layout_height="fill_parent" android:id="@+id/hour" android:layout_gravity="fill_horizontal" android:layout_width="116dp"></edu.crabium.android.wheel.WheelView>
            <edu.crabium.android.wheel.WheelView android:layout_weight="0.56" android:layout_height="fill_parent" android:id="@+id/mins" android:layout_gravity="fill_horizontal" android:layout_width="120dp"></edu.crabium.android.wheel.WheelView>
        </LinearLayout>
   
    
</LinearLayout>
