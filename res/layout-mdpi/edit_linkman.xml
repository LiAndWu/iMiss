<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:weightSum="1" >
    <LinearLayout android:background="@drawable/bar" android:id="@+id/barLinearLayout" android:weightSum="1" android:layout_height="45dp" android:baselineAligned="false" android:layout_width="fill_parent">
        <Button android:layout_gravity="center_vertical" android:layout_weight="0.06" android:background="@drawable/button_short_background" android:layout_width="80dip" android:text="取消" android:layout_height="35dip" android:layout_margin="3dip" android:textStyle="bold" android:id="@+id/cancel_button"></Button>
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="wrap_content" android:gravity="center" android:textStyle="bold" android:layout_height="fill_parent" android:textSize="24dip" android:text="联系人" android:id="@+id/neverCallTextView" android:layout_weight="0.87"></TextView>
        <Button android:layout_gravity="center_vertical" android:layout_width="80dip" android:layout_margin="3dip" android:layout_height="35dip" android:text="保存" android:background="@drawable/button_short_background" android:layout_weight="0.06" android:id="@+id/store_button"></Button>
       
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout3" android:layout_width="match_parent" android:weightSum="1" android:layout_height="wrap_content" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_marginTop="20dip" android:layout_marginBottom="10dip">
        <Button android:id="@+id/button1" android:layout_height="wrap_content" android:text="姓名" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_weight="0.29" android:layout_marginLeft="5dip" android:clickable="false"></Button>
        <EditText android:textStyle="bold" android:layout_height="wrap_content" android:maxLines="1" android:textSize="16dip" android:layout_gravity="center_vertical" android:layout_weight="0.50" android:layout_marginLeft="10dip" android:layout_width="167dip" android:inputType="text" android:id="@+id/name_editText">
         
        </EditText>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout4" android:layout_width="match_parent" android:weightSum="1" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:layout_height="wrap_content">
        <Button android:id="@+id/button2" android:layout_height="wrap_content" android:text="电话" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_marginLeft="5dip" android:layout_weight="0.29" android:clickable="false"></Button>
        <EditText android:textStyle="bold" android:layout_height="wrap_content" android:textSize="16dip" android:layout_gravity="center_vertical" android:layout_marginLeft="10dip" android:layout_weight="0.5" android:layout_width="167dip" android:phoneNumber="true" android:maxLines="1" android:inputType="phone" android:id="@+id/phone_editText"></EditText>
    </LinearLayout>
    
</LinearLayout>
