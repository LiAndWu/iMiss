<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout android:weightSum="1" android:layout_height="45dp" android:background="@drawable/bar" android:layout_width="fill_parent" android:id="@+id/barLinearLayout" android:baselineAligned="false">
        <Button android:layout_margin="3dip" android:layout_weight="0.06" android:layout_height="35dip" android:layout_width="70dip" android:text="上一步" android:background="@drawable/button_short_background" android:layout_gravity="center_vertical" android:id="@+id/back_button"></Button>
        <TextView android:layout_height="fill_parent" 
        android:layout_width="wrap_content"
         android:id="@+id/neverCallTextView"
          android:textSize="24dip" android:text="帮助" 
          android:textStyle="bold" 
          android:textAppearance="?android:attr/textAppearanceMedium" 
          android:gravity="center" android:layout_weight="0.47"></TextView>
    </LinearLayout>
    
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:orientation="vertical" android:weightSum="1" android:layout_height="match_parent" android:background="@drawable/white_background_big" android:layout_marginLeft="8dip" android:layout_marginRight="8dip" android:layout_marginTop="10dip" android:layout_marginBottom="10dip">
        <TextView android:scrollbarAlwaysDrawVerticalTrack="true"
        android:lineSpacingExtra = "4dip"
         android:text="嗨，这是帮助" android:scrollbars="vertical" android:textAppearance="?android:attr/textAppearanceLarge"  android:textColor="#000000" android:layout_gravity="center_vertical|center_horizontal|center" android:layout_width="272dp" android:layout_marginTop="30dip" android:id="@+id/help_textView" android:layout_weight="0.56" android:layout_height="255dp" android:textSize="16dip"></TextView>
    </LinearLayout>
    
</LinearLayout>
